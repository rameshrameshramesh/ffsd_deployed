<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      .rectangle-block {
        background-color: #f2f2f2;
        padding: 20px;
        margin-top: 20px;
      }

      .dropdown1 {
        display: inline-block;
        margin-right: 10px;
      }

      .dropbtn {
        background-color: #4caf50;
        color: white;
        padding: 10px;
        font-size: 16px;
        border: none;
        cursor: pointer;
      }

      .dropdown1-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        overflow: auto;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
      }

      .dropdown1-content button,
      .dropdown1-content label {
        display: block;
        padding: 10px;
        text-decoration: none;
        color: #333;
      }

      .dropdown1-content button:hover,
      .dropdown1-content label:hover {
        background-color: #ddd;
      }

      .dropdown1:hover .dropdown1-content {
        display: block;
      }

      .content {
        margin-top: 20px;
      }
    </style>
    <link rel="stylesheet" href="/sidecontainer.css" />
    <script src="/script.js"></script>
    <title>OPPORTUNA</title>
  </head>
  <body>
    <h1 id="variableValue"></h1>

    <div id="sideContainer1" class="side_container2"></div>
    <div class="rectangle-block" id="job-listings"></div>

    <script>

          var jobs = [];
          var port=<%=port%>;
          jobs = [
          <% jobData.forEach((job, index) => { %>
              <%- JSON.stringify(job) %><% if(index < jobData.length - 1) { %>,<% } %>
          <% }) %>
      ];
          console.log('Jobs:', jobs);
    </script>
    <script src="/parts of interface/sidecontainer1"></script>
    <script src="/parts of interface/post_container.js"></script>

    <div class="content"></div>
    <script>
      let subMenu = document.getElementById("subMenu");

      function toggleMenu() {
        subMenu.classList.toggle("open-menu");
      }
    </script>
  </body>
</html>
